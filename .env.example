# Ralph Loop Configuration

# Project name (required) - creates projects/<PROJECT_NAME>/ directory
PROJECT_NAME=my-app

# Provider selection (glm, claude, codex, kimmy_k2)
PROVIDER=glm

# Model override for GLM provider (glm-4.7, glm-5)
OPENCODE_MODEL=glm-4.7

# API Keys - set the one for your chosen provider
OPENCODE_API_KEY=your_zai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
KIMMY_K2_API_KEY=your_kimmy_k2_key_here

# Loop Configuration
MAX_ITERATIONS=0
